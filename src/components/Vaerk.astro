---
const { titel, nummer, img, placering, beskrivelse, kunstner } = Astro.props;

---

<article>
  <h1 class="titel_vaerk">{titel}</h1>
  <h3>{kunstner}</h3>
  <img src={img} alt="Billede af værket" class="billede_vaerk"
  />
  <div class="beskrivelse">
    <p>
      {beskrivelse}
    </p>
    <div class="lokation">
      <img src="billeder/pin.svg" alt="Pin" class="pin" />
      <h3 class="placering">{placering}</h3>
    </div>
  </div>
</article>

<style>
  h1,
  h3 {
    text-align: right;

    position: relative;
    z-index: 100;
  }

  article {
    padding-top: 50px;
  }

  .billede_vaerk {
    width: 400px;
    height: 400px;
    left: 30px;
    position: relative; /* Gør billedets position relativ, så det overlapper med den absolut positionerede beskrivelse */
    z-index: 0; /* Sørger for, at billedet er bag beskrivelsen */
    object-fit: cover;
  }

  .pin {
    width: 3%;
  }

  .placering {
    color: black;
  }

  .lokation {
    display: flex;
    flex-direction: row;
    justify-content: right;
    align-items: center;
    gap: 10px;
    padding: 80px 0 20px 0;
  }

  .beskrivelse {
    background-color: white;
    padding: 30px;
    position: absolute;
    top: 350px;
    left: 230px;
    right: 10px;
    width: 70%;
    z-index: 1; /* Sørger for, at beskrivelsen ligger over billedet */
  }
  .beskrivelse p {
    color: black;
  }

  ul {
    padding: 20px 0 20px 20px;
    list-style: none;
  }

  @media (min-width: 800px) {
    .beskrivelse {
      background-color: white;
      padding: 30px;
      position: absolute;
      top: 350px;
      left: 430px;
      right: 40px;
      z-index: 1; /* Sørger for, at beskrivelsen ligger over billedet */
    }
    .billede_vaerk {
      width: 75%;
      height: 400px;
      left: 30px;
      position: relative; /* Gør billedets position relativ, så det overlapper med den absolut positionerede beskrivelse */
      z-index: 0; /* Sørger for, at billedet er bag beskrivelsen */
      object-fit: cover;
    }
  }
  .placering {
  }
</style>
